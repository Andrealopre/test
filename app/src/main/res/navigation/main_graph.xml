<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/launchActivity">

    <activity
        android:id="@+id/launchActivity"
        android:name="it.unimib.newsdalmondo.ui.LaunchActivity"
        android:label="activity_launch"
        tools:layout="@layout/activity_launch" />
    <activity
        android:id="@+id/mainActivity"
        android:name="it.unimib.newsdalmondo.ui.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <activity
        android:id="@+id/newsActivity"
        android:name="it.unimib.newsdalmondo.ui.NewsActivity"
        android:label="activity_news"
        tools:layout="@layout/activity_news" />
    <action
        android:id="@+id/action_launcher_mainActivity"
        app:destination="@id/mainActivity" />
    <action
        android:id="@+id/action_launch_news"
        app:destination="@id/mainActivity" />
</navigation>